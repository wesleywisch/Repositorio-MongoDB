<body>

    <h1>Links</h1>
    <a href="/add">Adicionar link</a>


    <% for(let i=0; i < links.length; i++){%>

        <div id="<%=links[i]._id%>">
            <form action="/?_method=DELETE" method="POST">
                <h2>
                    <%=links[i].title%>
                </h2>
                <div>
                    <%=links[i].description%>
                </div>
                <div>
                    <%=links[i].url%>
                </div>
                <input name="id" value='<%=links[i]._id%>' hidden>
                <button type="submit">Delete</button>
                <a href="/edit/<%=links[i]._id%>">Editar</a>
            </form>
        </div>

        <%}%>


